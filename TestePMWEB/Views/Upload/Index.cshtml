@{
    ViewData["Title"] = "Home Page";
}
<h1>Enviar Arquivos</h1>
<hr />
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <section>
                @using (Html.BeginForm("EnviarArquivo", "Clientes", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <div class="col-md-10">
                            <p>Enviar arquivo Clientes:</p>
                            <input type="file" name="arquivo" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Enviar Arquivo" />
                        </div>
                    </div>
                }
            </section>
        </div>
        <hr />
        <div class="row">
            <section>
                @using (Html.BeginForm("EnviarArquivo", "Pedidos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <div class="col-md-10">
                            <p>Enviar arquivo Pedidos:</p>
                            <input type="file" name="arquivo" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Enviar Arquivo" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>